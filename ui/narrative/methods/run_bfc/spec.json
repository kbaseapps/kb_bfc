{
    "ver": "0.0.1",
    "authors": [
        "psdehal"
    ],
    "contact": "https://kbase.us/contact-us/",
    "categories": ["active"],
    "widgets": {
        "input": null,
        "output": "no-display"
    },
    "parameters": [
        {
            "id": "input_reads_upa",
            "optional": false,
            "advanced": false,
            "allow_multiple": false,
            "default_values": [ "" ],
            "field_type": "text",
            "text_options": {
                "valid_ws_types": [
                    "KBaseFile.PairedEndLibrary",
                    "KBaseAssembly.PairedEndLibrary"
                ]
            }
        },
        {
            "id": "output_reads_name",
            "optional": false,
            "advanced": false,
            "allow_multiple": false,
            "default_values": [ "" ],
            "field_type": "text",
            "text_options": {
                "is_output_name": true,
                "valid_ws_types": [
                    "KBaseFile.PairedEndLibrary",
                    "KBaseAssembly.PairedEndLibrary"
                ]
            }
        },
        {
          "id": "kmer_size",
          "optional": true,
          "advanced": true,
          "allow_multiple": false,
          "default_values": ["33"],
          "field_type": "text",
              "text_options": {
                  "validate_as": "int"
          }
        },
        {
          "id": "drop_unique_kmer_reads",
          "optional": true,
          "advanced": true,
          "allow_multiple": false,
          "default_values": ["0"],
          "field_type": "checkbox",
          "checkbox_options": {
              "checked_value": "1",
              "unchecked_value": "0"
          }
        }
    ],
    "behavior": {
        "service-mapping": {
            "url": "",
            "name": "kb_bfc",
            "method": "run_bfc",
            "input_mapping": [
                {
                    "narrative_system_variable": "workspace",
                    "target_property": "workspace_name"
                },
                {
                    "input_parameter": "input_reads_upa",
                    "target_property": "input_reads_upa",
                    "target_type_transform": "resolved-ref"
                },
                {
                    "input_parameter": "output_reads_name",
                    "target_property": "output_reads_name"
                },
                {
                    "input_parameter": "kmer_size",
                    "target_property": "kmer_size"
                }
            ],
            "output_mapping": [
                {
                    "service_method_output_path": [0, "report_name"],
                    "target_property": "report_name"
                },
                {
                    "service_method_output_path": [0, "report_ref"],
                    "target_property": "report_ref"
                },
                {
                    "narrative_system_variable": "workspace",
                    "target_property": "workspaceName"
                }
            ]
        }
    },
    "job_id_output_field": "docker"
}
